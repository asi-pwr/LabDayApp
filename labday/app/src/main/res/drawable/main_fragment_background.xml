<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>

    <item android:elevation="10dp" android:top="300dp" android:left="-280dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="line">
                <stroke
                    android:width="240dp"
                    android:color="@color/colorPrimaryDark" />
            </shape>
        </rotate>
    </item>

    <item android:top="460dp" android:left="5dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="line">

                <stroke
                    android:width="80dp"
                    android:color="@color/shadow" />
            </shape>
        </rotate>
    </item>

    <item android:top="460dp" android:right="0dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="line">

                <stroke
                    android:width="80dp"
                    android:color="@color/colorAuxiliary" />
            </shape>
        </rotate>
    </item>

    <item android:top="360dp" android:left="-105dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="line">

                <stroke
                    android:width="100dp"
                    android:color="@color/shadow" />
            </shape>
        </rotate>
    </item>

    <item android:top="360dp" android:left="-110dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="line">

                <stroke
                    android:width="100dp"
                    android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>

</layer-list>